{
  "blueprint.templatesPath": [".vscode/blueprint-templates"],

  "editor.wordWrap": "wordWrapColumn",

  "editor.unicodeHighlight.allowedCharacters": {
    "‘": true,
    "’": true
  },

  // Prettier messes up CK templates -- Let VSCode take care of HTML formatting
  "html.format.wrapLineLength": 80,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "files.associations": {
    "**/blueprint-templates/**": "txt"
  },

  "grammarly.dialect": "british",

  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/coverage": true
  },

  "search.exclude": {
    "**/*.log": true,
    "**/yarn.lock": true
  }
}
